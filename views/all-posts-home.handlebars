{{!-- All-posts-handlebar - ie. homepage that shows all available posts from all users. If there are any posts the following code will run --}}
{{#if posts.length}}
<div class="container w-100">
    <div class="row justify-content-center">
        <div class="col-10">
        <h5>RECENT COMMUNITY POSTS:</h5>
                          {{#if logged_in}}
                          <p>Have something you want to add? Go to your <a href="/dashboard">user dashboard</a> to write a post.</p>
                          {{else}}
                          <p><a href="/login">Login</a> or <a href="/login">create an account</a> to contribute to the techspace community.</p>
                          {{/if}}

        <p></p>
        </div>
    </div>
    {{!-- Loop through available posts and create the div tag with unique post information in each--}}
    {{#each posts as |post|}}
            <div class="row mt-3 justify-content-center">
                <div class="card border col-10 rounded text-left" style="width: 18rem;">
                    <div class="card-body">
                      <p class="card-title font-weight-bold text-uppercase "><a href="/post/{{id}}">{{post.post_title}}</a></p>
                      <p class="card-text">{{post.post_content}}</p>
                    <div class="bg-light p-2 text-secondary font-italic">posted by: {{user.username}} <br> posted on: {{format_date date_created}}
                    </div>
                </div>
            </div>
            </div>
      {{/each}}
<div>
    {{else}}
    <div class="container text-center w-75 welcome-alert">
        <h3 class="mb-4">Welcome to <span class="icon-text">techspace</span></h3>
        <p>Be the first to share your expertise with the techspace community!</p>
        <p>Go to your <a href="/dashboard">user dashboard</a> to write a post.</p>
    </div>
{{/if}}



