{{!-- All-posts-handlebar - ie. homepage that shows all available posts from all users. If there are any posts the following code will run --}}
{{#if posts.length}}
<div class="container text-center">
    <h5>Recent Posts:</h5>
    {{!-- Loop through available posts and create the div tag with unique post information in each--}}
    {{#each posts as |post|}}
            <div class="row mt-3 justify-content-center">
                <div class="card border col-8 rounded" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title font-weight-bold"><a href="/post/{{id}}">{{post.post_title}}</a></h5>
                      <p class="card-text">{{post.post_content}}</p>
                    <div class="bg-secondary py-2 text-white">posted written by {{user.username}} <br> {{format_date date_created}}
                    </div>
                </div>
            </div>
            </div>
      {{/each}}
<div>
{{/if}}



