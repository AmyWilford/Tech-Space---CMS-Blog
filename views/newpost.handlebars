{{! HTML form to create a new post }}
<div class="container mt-4">
  <div class="mb-3 text-right">
    <a href="/dashboard"> ï¹¤back to dashboard</a></div>
  <h5 class="text-uppercase">create a new post</h5>
  <form class="mt-4" id="new-post-form">
    <div class="form-group">
      <label for="title">Your Post:</label>
      <input
        type="text"
        class="form-control"
        id="post-title"
        name="post-title"
        placeholder="your post title"
      />
    </div>
    <div class="form-group">
      <label for="content">Post Body</label>
      <textarea
        class="form-control"
        placeholder="Once upon a time..."
        name="post-content"
        id="post-content"
        rows="5"
      ></textarea>
    </div>
    <button type="submit" class="btn custom-button">Submit</button>
  </form>
</div>
{{! Connection to newpost.js to link event handlers }}
<script src="/js/newpost.js"></script>